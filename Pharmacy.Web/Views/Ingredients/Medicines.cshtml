@using Pharmacy.Core.Entities.ViewModels.Responses.Medicines
@model IEnumerable<DisplayMedicineInIngredient>

@{
    ViewData["Title"] = "Medicines";
}

<h1 style="text-align:center"><strong class="text-primary">Medicines contain @ViewBag.Ingredient.Name</strong></h1>

<div class="owl-prev text-center" style="font-size: 24px;">
    <a asp-action="Index"><span class="icon-arrow_back"></span></a>
</div>


<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.TradeName)
            </th>
            <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Ratio)
            </th>


            <th scope="col" class="text-center">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center text-dark">
                    @Html.DisplayFor(modelItem => item.TradeName)
                </td>
                <td class="text-center text-dark">
                    @Html.DisplayFor(modelItem => item.Ratio)
                </td>
                <td class="text-center text-dark">
                    <a asp-action="MedicineDetails" asp-route-id="@ViewBag.Ingredient.Id" asp-route-medicineId="@item.MedicineId" class="btn btn-sm btn-outline-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@*Pagination*@
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        @if (ViewBag.TotalPages > 0)
        {
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                if (i == ViewBag.PageNumber)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Medicines" asp-route-id="@ViewBag.Ingredient.Id" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
            }
        }
    </ul>
</nav>