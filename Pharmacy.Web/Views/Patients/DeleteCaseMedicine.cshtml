@using Pharmacy.Core.Entities.ViewModels.Responses.Medicines
@model DisplayMedicineInCase

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2 class="text-danger text-center mb-3">Are you sure you want to delete this medicine?</h2>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2" style="color: black; border-right: 1px solid #ccc; padding-right: 10px;">
                    @Html.DisplayNameFor(model => model.TradeName)
                </dt>
                <dd class="col-sm-10" style="color: black;">
                    @Html.DisplayFor(model => model.TradeName)
                </dd>
            </dl>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" style="color: black; border-right: 1px solid #ccc; padding-right: 10px;">
                    @Html.DisplayNameFor(model => model.Times)
                </dt>
                <dd class="col-sm-10" style="color: black;">
                    @Html.DisplayFor(model => model.Times)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <div class="form-group">
            <form asp-action="ConfirmDeleteCaseMedicine" asp-route-id="@ViewBag.Patient.Id" asp-route-caseId="@Model.CaseId" asp-route-medicineId="@Model.MedicineId">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
                <a class="btn btn-outline-secondary" asp-action="CaseMedicines" asp-route-id="@ViewBag.Patient.Id" asp-route-caseId="@Model.CaseId">Go Back</a>
            </form>
        </div>
    </div>
</div>