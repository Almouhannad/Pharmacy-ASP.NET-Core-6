@using Pharmacy.Core.Entities.ViewModels.Requests.Patients
@model EditPatientRequest

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center"><strong class="text-primary">@("Edit patient " + Model.FirstName + " " + Model.LastName)</strong></h1>
<div class="owl-prev text-center" style="font-size: 24px;">
    <a asp-action="Index"><span class="icon-arrow_back"></span></a>
</div>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="p-3 p-lg-5 border">
        <div class="form-group row">
            <div class="col-md-6">
                <label asp-for="FirstName" class="text-black">@Html.DisplayNameFor(Model => Model.FirstName)<span class="text-danger">*</span></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="text-black">@Html.DisplayNameFor(Model => Model.LastName)<span class="text-danger">*</span></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-12">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save">
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
