@using Pharmacy.Core.Entities.ViewModels.Requests.Cases
@model EditCaseInPatientRequest

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}



<form asp-action="EditCase" asp-route-id="@Model.PatientId" onsubmit="return jQueryAjaxPost(this,'#cases');">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="PatientId" value="@Model.PatientId" />

    <div class="form-group row">
        <div class="col-md-6">
            <label asp-for="Name" class="text-black">@Html.DisplayNameFor(Model => Model.Name)<span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save">
        </div>
    </div>

</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}