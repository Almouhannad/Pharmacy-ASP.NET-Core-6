@using Pharmacy.Core.Entities.ViewModels.Requests.Cases
@model AddCaseToPatientRequest

@{
    ViewData["Title"] = "Add case";
    Layout = null;
}

<form asp-action="AddCase" asp-route-id="@Model.PatientId" onsubmit="return jQueryAjaxPost(this,'#cases');">

    <input type="hidden" asp-for="PatientId" value="@Model.PatientId" />


    <div class="form-group row">
        <div class="col-md-6">
            <label asp-for="Name" class="text-black">@Html.DisplayNameFor(Model => Model.Name)<span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Create">
        </div>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
