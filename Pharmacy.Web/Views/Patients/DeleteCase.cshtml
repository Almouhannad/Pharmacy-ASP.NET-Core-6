@using Pharmacy.Core.Entities.ViewModels.Responses.Cases
@model DisplayCaseInPatient

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2 class="text-danger text-center">Are you sure you want to delete this case?</h2>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2" style="color: black; border-right: 1px solid #ccc; padding-right: 10px;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10" style="color: black;">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <div class="form-group">
            <form asp-action="ConfirmDeleteCase" asp-route-id="@Model.PatientId" asp-route-caseId="@Model.Id">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Cases" asp-route-id="@Model.PatientId">Go Back</a>
            </form>
        </div>
    </div>
</div>