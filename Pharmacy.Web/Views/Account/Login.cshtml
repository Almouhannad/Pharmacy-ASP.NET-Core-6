@using Pharmacy.Core.Entities.ViewModels.Identity
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <p>
                <h4 class="text-black">Log in to your account</h4>
            </p>
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span class="text-danger"><b class="text-danger">Sorry!</b> - @TempData["Error"]</span>
                </div>
            }
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label text-black"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label text-black"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label text-black">Remember me</label>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />

                        <div class="form-group">
                            <input class="btn btn-outline-success float-right" type="submit" value="Log in" />
                            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>