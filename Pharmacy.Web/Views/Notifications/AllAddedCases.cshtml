@using Pharmacy.Core.Entities.ViewModels.Responses.Notifications
@model IEnumerable<DisplayAddNewCaseNotification>

@{
    ViewData["Title"] = "Added cases";
}
<h1 style="text-align:center"><strong class="text-primary">Added cases</strong></h1>

<div class="owl-prev text-center" style="font-size: 24px;">
    <a asp-controller="Home" asp-action="Index"><span class="icon-arrow_back"></span></a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center">
                Message
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center text-dark">
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
            </tr>
        }
    </tbody>
</table>

@*Pagination*@
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        @if (ViewBag.TotalPages > 0)
        {
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                if (i == ViewBag.PageNumber)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="AllAddedCases" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
            }
        }
    </ul>
</nav>