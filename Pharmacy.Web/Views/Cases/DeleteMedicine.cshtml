@using Pharmacy.Core.Entities.ViewModels.Responses.Medicines
@model DisplayMedicineInCase

@{
    ViewData["Title"] = "Delete medicine";
}

<div class="container">
    <h1 style="text-align:center"><span class="Display-4 text-danger">Are you sure you want to delete this medicine?</span></h1>
    <div class="owl-prev text-center" style="font-size: 24px;">
        <a asp-action="Index"><span class="icon-arrow_back"></span></a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2" style="color: black; border-right: 1px solid #ccc; padding-right: 10px;">
                    @Html.DisplayNameFor(model => model.TradeName)
                </dt>
                <dd class="col-sm-10" style="color: black;">
                    @Html.DisplayFor(model => model.TradeName)
                </dd>
            </dl>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" style="color: black; border-right: 1px solid #ccc; padding-right: 10px;">
                    @Html.DisplayNameFor(model => model.Times)
                </dt>
                <dd class="col-sm-10" style="color: black;">
                    @Html.DisplayFor(model => model.Times)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <div class="form-group">
            <form asp-action="ConfirmDeleteMedicine" asp-route-id="@ViewBag.Case.Id" asp-route-medicineId="@ViewBag.Medicine.Id">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Medicines" asp-route-id="@Model.CaseId">Go Back</a>
            </form>
        </div>
    </div>


</div>
