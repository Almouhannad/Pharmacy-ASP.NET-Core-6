@using Pharmacy.Core.Entities.ViewModels.Requests.Categories
@model CreateCategoryRequest

@{
    ViewData["Title"] = "Create category";
}

<h1 style="text-align:center"><strong class="text-primary">Create category</strong></h1>

<div class="owl-prev text-center" style="font-size: 24px;">
    <a asp-action="Index"><span class="icon-arrow_back"></span></a>
</div>

<form asp-action="Create">

    <div class="p-3 p-lg-5 border">
        <div class="form-group row">
            <div class="col-md-6">
                <label asp-for="Name" class="text-black">@Html.DisplayNameFor(Model => Model.Name) <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-lg-12">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Create">
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}