@using Pharmacy.Core.Entities.ViewModels.Responses.Categories
@model DisplayCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2 class="text-danger text-center">Are you sure you want to delete this category?</h2>
    <h2 class="text-danger text-center">All medicines with this category will be deleted!</h2>
    <div class="owl-prev text-center" style="font-size: 24px;">
        <a asp-action="Index"><span class="icon-arrow_back"></span></a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2" style="color: black; border-right: 1px solid #ccc; padding-right: 10px;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10" style="color: black;">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <div class="form-group">
            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#confirmDeleteModal" data-backdrop="static">
                Delete
            </button>
            <a class="btn btn-outline-secondary" asp-action="Index">Go Back</a>
        </div>

        <!-- Confirm Delete Modal -->
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true" style="z-index: 1100;">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-center text-dark" id="confirmDeleteModalLabel" style="color: black;">Confirm Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-center" style="color: red;">
                        <strong><p style="text-align: center; font-weight: bold;">Are you sure?!</p></strong>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" id="cancelButton">Cancel</button>
                        <form asp-action="ConfirmDelete" asp-route-id="@Model.Id">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
   .modal-backdrop {
        background-color: #000;
        opacity: 0.5;
    }

   .modal-open .site-navbar {
        display: none;
    }
</style>