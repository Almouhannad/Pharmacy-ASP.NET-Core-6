@{
    ViewData["Title"] = "Home";
}

<div class="site-wrap">

    <div class="owl-carousel owl-single px-0">
        <div class="site-blocks-cover overlay" style="background-image: url('assets/images/hero_bg.jpg');">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mx-auto align-self-center">
                        <div class="site-block-cover-content text-center">
                            <h1 class="mb-0"><strong class="text-primary">Pharmative</strong> Opens 24 Hours</h1>

                            <div class="row justify-content-center mb-5">
                            </div>
                            @if (!SignInManager.IsSignedIn(User))
                            {
                                <p><a asp-controller="Account" asp-action="Register" class="btn btn-primary px-5 py-3">Join now</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="site-blocks-cover overlay" style="background-image: url('assets/images/hero_bg_2.jpg');">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mx-auto align-self-center">
                        <div class="site-block-cover-content text-center">
                            <h1 class="mb-0">New Medicine <strong class="text-primary">Everyday</strong></h1>
                            <div class="row justify-content-center mb-5">
                            </div>
                            @if (!SignInManager.IsSignedIn(User))
                            {
                                <p><a asp-controller="Account" asp-action="Register" class="btn btn-primary px-5 py-3">Join now</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="site-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="feature">
                        <span class="wrap-icon flaticon-24-hours-drugs-delivery"></span>
                        <h3>Free Delivery</h3>
                        <p>Our pharmacy stocks a wide range of the latest and most effective medications to ensure you have access to the treatments you need, delivered fresh daily.</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="feature">
                        <span class="wrap-icon flaticon-medicine"></span>
                        <h3>New Medicine Everyday</h3>
                        <p>Our commitment to providing the latest and most advanced medications ensures you receive the most effective treatments, delivered conveniently to your doorstep.</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="feature">
                        <span class="wrap-icon flaticon-test-tubes"></span>
                        <h3>Medicines Guaranteed</h3>
                        <p>We stand behind the quality and safety of every medication we provide, ensuring you receive authentic, reliable, and effective products backed by our ironclad guarantee.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row">
                <div class="title-section text-center col-12">
                    <h2>Pharmacy <strong class="text-primary">Products</strong></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 block-3 products-wrap">
                    <div class="nonloop-block-3 owl-carousel">

                        <div class="text-center item mb-4 item-v2">
                            <span class="onsale">Sale</span>
                            <img src="assets/images/product_03.png" alt="Image">
                            <h3 class="text-dark">Umcka Cold Care</h3>
                        </div>

                        <div class="text-center item mb-4 item-v2">
                            <img src="assets/images/product_01.png" alt="Image">
                            <h3 class="text-dark">Bioderma</h3>
                        </div>

                        <div class="text-center item mb-4 item-v2">
                            <span class="onsale">Sale</span>
                            <img src="assets/images/product_02.png" alt="Image">
                            <h3 class="text-dark">Chanca Piedra</h3>
                        </div>

                        <div class="text-center item mb-4 item-v2">
                            <img src="assets/images/product_04.png" alt="Image">
                            <h3 class="text-dark">Cety1Pure</h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>