@{
    ViewData["Title"] = "Page Not Found!";
}

<div class="text-center">
    <h1 class="Display-2 text-danger">Error 404 - Page Not Found!</h1>
    <div class="text-center item mb-4 item-v2">
        <img src="@Url.Content("~/assets/images/error404.jpg")" alt="Image" style="width: 50%; height: auto;">
    </div>
    <p class="lead Display-4 text-danger">The page you are looking for does not exist or has been removed.</p>
    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home Page</a>
    </p>
</div>